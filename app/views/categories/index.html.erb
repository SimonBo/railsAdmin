<h1>Categories</h1>

<div class="row">
  <% @categories.each do |c| %>

    <div class='col-sm-3'>
      <h2><%= link_to category %></h2>
      
      <h3>Articles</h3>
        <% category.articles.each do |article| %>
          <p><%= article.title %></p>
          <%= link_to article.title, article %>
        <% end %>
    </div>
  <% end %>
</div>