<h1>Categories</h1>

<div class="row">
  <% @categories.each do |category| %>

    <div class='col-sm-3'>
      
      
      
      <div class="list-group">
      <h2 class="list-group-item"><%= link_to category.name, category %></h2>
        <% category.articles.each do |article| %>
          <%= link_to article.title, article, class: "list-group-item" %>
        <% end %>
        </div>
    </div>
  <% end %>
</div>