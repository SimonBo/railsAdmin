<h1>Categories</h1>

<div class="row">
  <% @categories.each_slice(3).to_a.each do |chunk| %>
    <div class="row">
    
      <% chunk.each do |category| %>
        <div class='col-sm-3'>
          <div class="list-group">
          <h2 class="list-group-item"><%= link_to category.name, category %></h2>
            <% category.articles.each do |article| %>
              <%= link_to article.title, article, class: "list-group-item" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to 'New Category', new_category_path %>