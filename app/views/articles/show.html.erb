<main>
<h2>
  <!-- <h2>Title:</h2> -->
  <%= @article.title %>
</h2>
<%= render @article.author %>
<%= render @article.categories %>
<br \><br \>
<% if @article.cover_photo.file? %>
  <%= image_tag @article.cover_photo.url(:large) %>
<% end %>

<p>
  <!-- <h2>Text:</h2> -->
  <%= @article.content %>
</p>

<div class="row">



<% unless @pictures.empty? %>
  <% @pictures.each do |pic| %>
    <div class='col-sm-8'>
      <%= image_tag pic.image.url %>
      <div class="caption">
        <p style="text-align: center;">
        <%= link_to "Edit", picture_path(pic) %>

        <%= 
          link_to "Delete", pic, 
            :data => { :confirm => "Are you sure?" }, 
            :method => :delete 
          %>

        </p>
      </div>
    </div>
    
  <% end %>
<% end %>

</div>







<h3>Comments</h3>
<%= render @article.comments %>

<h4>Add a comment:</h4>
<%= render "comments/form" %>





<% if current_user.try(:admin?) %>   
  <%= link_to  edit_article_path(@article) do %>
    <i class="fa fa-file-o fa-4x "></i>
  <% end %>
  <%= link_to @article, method: :delete, data: { confirm: 'Are you sure?' }  do %>
    <i class="fa fa-eraser fa-4x space-in-between"></i>
  <% end %>
<% end %>
  <%= link_to articles_path do %>
    <i class="fa fa-backward fa-4x"></i> 
  <% end %>

</main>

<% content_for :aside do %>
  <%= render 'social' %>
  <%= render 'most_commented' %>
  <%= render 'sidebar_popular' %>
<% end %>